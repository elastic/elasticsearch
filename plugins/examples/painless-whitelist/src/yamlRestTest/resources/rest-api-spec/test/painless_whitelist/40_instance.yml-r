# Example tests using an instance binding

" custom instance binding":
- do:
    index:
      index: test
      id: 1
      body: { "num1": 1 }
- do:
    indices.refresh: {}

- do:
    search:
      rest_total_hits_as_int: true
      index: test
      body:
        query:
          match_all: {}
        script_fields:
          sNum1:
            script:
              source: "addValue((int)doc['num1'][0])"
              lang: painless

- match: { hits.total: 1 }
- match: { hits.hits.0.fields.sNum1.0: 2 }

- do:
    search:
      rest_total_hits_as_int: true
      index: test
      body:
        query:
          match_all: {}
        script_fields:
          sNum1:
            script:
              source: "getValue() + doc['num1'][0]"
              lang: painless

- match: { hits.total: 1 }
- match: { hits.hits.0.fields.sNum1.0: 2 }

{
  "ccr.follow_stats": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ccr-follow-stats",
      "description": "Get follower stats"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/{index}/_ccr/stats",
          "methods": [
            "GET"
          ],
          "parts": {
            "index": {
              "type": "list",
              "description": "A comma-separated list of index patterns; use `_all` to perform the operation on all indices"
            }
          }
        }
      ]
    },
    "params": {
      "timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout"
      }
    }
  }
}

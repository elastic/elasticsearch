{
  "ccr.pause_auto_follow_pattern": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ccr-pause-auto-follow-pattern",
      "description": "Pause an auto-follow pattern"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ccr/auto_follow/{name}/pause",
          "methods": [
            "POST"
          ],
          "parts": {
            "name": {
              "type": "string",
              "description": "The name of the auto follow pattern that should pause discovering new indices to follow."
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout for connection to master node"
      }
    }
  }
}

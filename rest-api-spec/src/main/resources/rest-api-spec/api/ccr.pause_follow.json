{
  "ccr.pause_follow": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/ccr-post-pause-follow.html",
      "description": "Pause a follower"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/{index}/_ccr/pause_follow",
          "methods": [
            "POST"
          ],
          "parts": {
            "index": {
              "type": "string",
              "description": "The name of the follower index that should pause following its leader index."
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "description": "Explicit operation timeout for connection to master node"
      }
    }
  }
}

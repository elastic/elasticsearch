{
  "ccr.put_auto_follow_pattern": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ccr-put-auto-follow-pattern",
      "description": "Create or update auto-follow patterns"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ccr/auto_follow/{name}",
          "methods": [
            "PUT"
          ],
          "parts": {
            "name": {
              "type": "string",
              "description": "The name of the auto follow pattern."
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout for connection to master node"
      }
    },
    "body": {
      "description": "The specification of the auto follow pattern",
      "required": true
    }
  }
}

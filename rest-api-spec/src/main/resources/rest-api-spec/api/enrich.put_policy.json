{
  "enrich.put_policy": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-enrich-put-policy",
      "description": "Create an enrich policy"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_enrich/policy/{name}",
          "methods": [
            "PUT"
          ],
          "parts": {
            "name": {
              "type": "string",
              "description": "The name of the enrich policy"
            }
          }
        }
      ]
    },
    "body": {
      "description": "The enrich policy to register",
      "required": true
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Timeout for processing on master node"
      }
    }
  }
}

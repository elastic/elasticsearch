{
  "health_report": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-health-report",
      "description": "Get the cluster health"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_health_report",
          "methods": [
            "GET"
          ]
        },
        {
          "path": "/_health_report/{feature}",
          "methods": [
            "GET"
          ],
          "parts": {
            "feature": {
              "type": "list",
              "description": "Comma-separated list of cluster features, as returned by the top-level health report API."
            }
          }
        }
      ]
    },
    "params": {
      "timeout": {
        "type": "time",
        "description": "Explicit operation timeout"
      },
      "verbose": {
        "type": "boolean",
        "description": "Opt in for more information about the health of the system",
        "default": true
      },
      "size": {
        "type": "int",
        "description": "Limit the number of affected resources the health API returns",
        "default": 1000
      }
    }
  }
}

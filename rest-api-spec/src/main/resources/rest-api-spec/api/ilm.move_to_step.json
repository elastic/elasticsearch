{
  "ilm.move_to_step": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ilm-move-to-step",
      "description": "Move to a lifecycle step"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ilm/move/{index}",
          "methods": [
            "POST"
          ],
          "parts": {
            "index": {
              "type": "string",
              "description": "The name of the index whose lifecycle step is to change"
            }
          }
        }
      ]
    },
    "body": {
      "description": "The new lifecycle step to move to",
      "required": true
    }
  }
}

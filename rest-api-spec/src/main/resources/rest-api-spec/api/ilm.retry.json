{
  "ilm.retry": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/ilm-retry-policy.html",
      "description": "Retry a policy"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/{index}/_ilm/retry",
          "methods": [
            "POST"
          ],
          "parts": {
            "index": {
              "type": "string",
              "description": "The name of the indices (comma-separated) whose failed lifecycle step is to be retry"
            }
          }
        }
      ]
    }
  }
}

{
  "indices.clone": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-indices-clone",
      "description": "Clone an index"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/{index}/_clone/{target}",
          "methods": [
            "PUT",
            "POST"
          ],
          "parts": {
            "index": {
              "type": "string",
              "description": "The name of the source index to clone"
            },
            "target": {
              "type": "string",
              "description": "The name of the target index to clone into"
            }
          }
        }
      ]
    },
    "params": {
      "timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout"
      },
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Specify timeout for connection to master"
      },
      "wait_for_active_shards": {
        "type": "string",
        "default": "1",
        "description": "Set the number of active shards to wait for on the cloned index before the operation returns."
      }
    },
    "body": {
      "description": "The configuration for the target index (`settings` and `aliases`)",
      "required": false
    }
  }
}

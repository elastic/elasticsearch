{
  "indices.downsample": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/indices-downsample-data-stream.html",
      "description": "Downsample an index"
    },
    "stability": "experimental",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/{index}/_downsample/{target_index}",
          "methods": [
            "POST"
          ],
          "parts": {
            "index": {
              "type": "string",
              "description": "The index to downsample",
              "required": true
            },
            "target_index": {
              "type": "string",
              "description": "The name of the target index to store downsampled data",
              "required": true
            }
          }
        }
      ]
    },
    "body": {
      "description": "The downsampling configuration",
      "required": true
    }
  }
}

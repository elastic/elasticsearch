{
  "inference.inference": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-inference-inference",
      "description": "Perform inference on the service"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_inference/{inference_id}",
          "methods": [
            "POST"
          ],
          "parts": {
            "inference_id": {
              "type": "string",
              "description": "The inference Id"
            }
          }
        },
        {
          "path": "/_inference/{task_type}/{inference_id}",
          "methods": [
            "POST"
          ],
          "parts": {
            "task_type": {
              "type": "enum",
              "description": "The task type",
              "options": [
                "sparse_embedding",
                "text_embedding",
                "rerank",
                "completion",
                "chat_completion"
              ]
            },
            "inference_id": {
              "type": "string",
              "description": "The inference Id"
            }
          }
        }
      ]
    },
    "body": {
      "description": "The inference payload",
      "required": true
    },
    "params": {
      "timeout": {
        "type": "time",
        "description": "The amount of time to wait for the inference request to complete.",
        "default": "30s"
      }
    }
  }
}

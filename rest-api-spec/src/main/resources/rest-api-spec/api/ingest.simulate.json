{
  "ingest.simulate": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ingest-simulate",
      "description": "Simulate a pipeline"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ingest/pipeline/_simulate",
          "methods": [
            "GET",
            "POST"
          ]
        },
        {
          "path": "/_ingest/pipeline/{id}/_simulate",
          "methods": [
            "GET",
            "POST"
          ],
          "parts": {
            "id": {
              "type": "string",
              "description": "Pipeline ID"
            }
          }
        }
      ]
    },
    "params": {
      "verbose": {
        "type": "boolean",
        "description": "Verbose mode. Display data output for each processor in executed pipeline",
        "default": false
      }
    },
    "body": {
      "description": "The simulate definition",
      "required": true
    }
  }
}

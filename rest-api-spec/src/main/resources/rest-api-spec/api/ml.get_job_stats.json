{
  "ml.get_job_stats": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ml-get-job-stats",
      "description": "Get anomaly detection job stats"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ml/anomaly_detectors/_stats",
          "methods": [
            "GET"
          ]
        },
        {
          "path": "/_ml/anomaly_detectors/{job_id}/_stats",
          "methods": [
            "GET"
          ],
          "parts": {
            "job_id": {
              "type": "string",
              "description": "The ID of the jobs stats to fetch"
            }
          }
        }
      ]
    },
    "params": {
      "allow_no_match": {
        "type": "boolean",
        "required": false,
        "description": "Whether to ignore if a wildcard expression matches no jobs. (This includes `_all` string or when no jobs have been specified)"
      }
    }
  }
}

{
  "ml.update_trained_model_deployment": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-ml-update-trained-model-deployment",
      "description": "Update a trained model deployment"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_ml/trained_models/{model_id}/deployment/_update",
          "methods": [
            "POST"
          ],
          "parts": {
            "model_id": {
              "type": "string",
              "description": "The unique identifier of the trained model."
            }
          }
        }
      ]
    },
    "params": {
      "number_of_allocations": {
        "type": "int",
        "default": 1,
        "description": "Update the model deployment to this number of allocations."
      }
    },
    "body": {
      "description": "The updated trained model deployment settings",
      "required": false
    }
  }
}

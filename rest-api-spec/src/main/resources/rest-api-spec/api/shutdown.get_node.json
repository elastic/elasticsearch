{
  "shutdown.get_node": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-shutdown-get-node",
      "description": "Get the shutdown status"
    },
    "stability": "stable",
    "visibility": "private",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_nodes/shutdown",
          "methods": [
            "GET"
          ],
          "parts": {}
        },
        {
          "path": "/_nodes/{node_id}/shutdown",
          "methods": [
            "GET"
          ],
          "parts": {
            "node_id": {
              "type": "string",
              "description": "Which node for which to retrieve the shutdown status"
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "description": "Timeout for processing on master node"
      }
    }
  }
}

{
  "slm.start":{
    "documentation":{
      "url":"https://www.elastic.co/guide/en/elasticsearch/reference/current/slm-api-start.html",
      "description":"Turns on snapshot lifecycle management (SLM)."
    },
    "stability":"stable",
    "visibility":"public",
    "headers":{
      "accept": [ "application/json"]
    },
    "url":{
      "paths":[
        {
          "path":"/_slm/start",
          "methods":[
            "POST"
          ]
        }
      ]
    },
    "params":{
      "master_timeout":{
        "type":"time",
        "description":"Timeout for processing on master node"
      },
      "timeout":{
        "type":"time",
        "description":"Timeout for acknowledgement of update from all nodes in cluster"
      }
    }
  }
}

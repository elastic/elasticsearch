{
  "snapshot.create_repository": {
    "documentation": {
      "url": "https://www.elastic.co/docs/api/doc/elasticsearch/operation/operation-snapshot-create-repository",
      "description": "Create or update a snapshot repository"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ],
      "content_type": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_snapshot/{repository}",
          "methods": [
            "PUT",
            "POST"
          ],
          "parts": {
            "repository": {
              "type": "string",
              "description": "A repository name"
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout for connection to master node"
      },
      "timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout"
      },
      "verify": {
        "type": "boolean",
        "default": true,
        "description": "Whether to verify the repository after creation"
      }
    },
    "body": {
      "description": "The repository definition",
      "required": true
    }
  }
}

{
  "snapshot.get_repository": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/get-snapshot-repo-api.html",
      "description": "Get snapshot repository information"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_snapshot",
          "methods": [
            "GET"
          ]
        },
        {
          "path": "/_snapshot/{repository}",
          "methods": [
            "GET"
          ],
          "parts": {
            "repository": {
              "type": "list",
              "description": "A comma-separated list of repository names"
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout for connection to master node"
      },
      "local": {
        "type": "boolean",
        "default": false,
        "description": "Return local information, do not retrieve the state from master node (default: false)"
      }
    }
  }
}

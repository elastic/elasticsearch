{
  "snapshot.verify_repository": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/verify-snapshot-repo-api.html",
      "description": "Verify a snapshot repository"
    },
    "stability": "stable",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_snapshot/{repository}/_verify",
          "methods": [
            "POST"
          ],
          "parts": {
            "repository": {
              "type": "string",
              "description": "A repository name"
            }
          }
        }
      ]
    },
    "params": {
      "master_timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout for connection to master node"
      },
      "timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout"
      }
    }
  }
}

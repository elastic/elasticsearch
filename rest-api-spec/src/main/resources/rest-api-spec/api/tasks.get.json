{
  "tasks.get": {
    "documentation": {
      "url": "https://www.elastic.co/guide/en/elasticsearch/reference/8.19/tasks.html",
      "description": "Get task information"
    },
    "stability": "experimental",
    "visibility": "public",
    "headers": {
      "accept": [
        "application/json"
      ]
    },
    "url": {
      "paths": [
        {
          "path": "/_tasks/{task_id}",
          "methods": [
            "GET"
          ],
          "parts": {
            "task_id": {
              "type": "string",
              "description": "Return the task with specified id (node_id:task_number)"
            }
          }
        }
      ]
    },
    "params": {
      "wait_for_completion": {
        "type": "boolean",
        "default": false,
        "description": "Wait for the matching tasks to complete (default: false)"
      },
      "timeout": {
        "type": "time",
        "default": "30s",
        "description": "Explicit operation timeout"
      }
    }
  }
}

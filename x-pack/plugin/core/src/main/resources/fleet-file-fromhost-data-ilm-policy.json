{
  "phases": {
    "hot": {
      "min_age": "0ms",
      "actions": {
        "rollover": {
          "max_size": "10gb",
          "max_age": "7d"
        }
      }
    },
    "delete": {
      "min_age": "7d",
      "actions": {
        "delete": {
          "delete_searchable_snapshot": true
        }
      }
    }
  },
  "_meta": {
    "description": "policy for fleet uploaded files",
    "managed": true
  }
}
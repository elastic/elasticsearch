{
  "settings": {
    "auto_expand_replicas": "0-1"
  },
  "mappings": {
    "_doc" : {
      "dynamic": false,
      "_meta": {
        "version": "${fleet.version}"
      },
      "properties": {
        "agent": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "version": {
              "type": "keyword"
            }
          }
        },
        "host": {
          "properties": {
            "architecture": {
              "type": "keyword"
            },
            "id": {
              "type": "keyword"
            },
            "ip": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            }
          }
        },
        "server": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "version": {
              "type": "keyword"
            }
          }
        },
        "@timestamp": {
          "type": "date"
        }
      }
    }
  }
}

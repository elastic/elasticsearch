multipleMatch
required_capability: match_operator
from books
| where (description match "Sauron" OR description match "Dark Lord") AND
  (author match "J. R. R. Tolkien" OR author match "John Ronald Reuel Tolkien")
| keep book_no, title, author
| sort book_no
| limit 4
;


    "documentation":{
      "url":"https://www.elastic.co/guide/en/elasticsearch/reference/current/ccr-pause-auto-follow-pattern.html",
      "description": "Pauses an auto-follow pattern"
    },
    "stability":"stable",
    "url":{
      "paths":[
        {
          "path":"/_ccr/auto_follow/{name}/pause",
